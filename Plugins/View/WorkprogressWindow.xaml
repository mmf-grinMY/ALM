<Window x:Class="Plugins.View.WorkProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Plugins.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        d:DesignHeight="160"
        d:DesignWidth="300"
        MaxHeight="160"
        MaxWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Margin="20">
            <Run Text="Успешно обработано "/>
            <Run x:Name="currentObject"/>
            <Run Text=" из "/>
            <Run x:Name="allObjects"/>
            <Run Text=" объектов"/>
        </TextBlock>

        <ProgressBar
            x:Name="progressBar"
            MaxHeight="30"
            Grid.Row="1"/>

        <Button
            Grid.Row="2"
            Margin="4"
            Content="Остановить"
            Click="Button_Click"/>
    </Grid>
</Window>
